{
  "name": "copy-relative-path",
  "displayName": "Copy Relative Path",
  "description": "Copy Relative Path from a File",
  "version": "0.0.2",
  "publisher": "alexdima",
  "engines": {
    "vscode": "^1.4.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:copyRelativePath"
  ],
  "main": "./extension",
  "contributes": {
    "commands": [
      {
        "command": "copyRelativePath",
        "title": "Copy Relative Path"
